<style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 220px;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.choose_container {
    padding: 2px 16px;
}

.card button {
    border: none;
    outline: 0;
    padding: 12px;
    color: white;
    background-color: #000;
    text-align: center;
    font-size: 18px;
}

.card button:hover {
    opacity: 0.7;
    text-decoration: none;
}
</style>

<% include ../includes/header %>

<header>
    <div class="header-content">
        <div class="header-content-inner">
            <% for(let i=0; i < guilds.length; i++) { %>
                <a href="/manage/<%= guilds[i].id %>">
            <div class="card">
                <img src="<%= guilds[i].icon %>" alt="Icon" style="width:100%">
                <div class="choose_container">
                    <h4><b><%= guilds[i].name %></b></h4>
                </div>
                <p style="margin-bottom: 2px"><%= guilds[i].id %></p>
                <!-- <button style="width: 100%;" data-href="/manage/<%= guilds[i].id %>">Manage</button> -->
            </div></a>
            <% } %>
        </div>
    </div>
</header>